error-color = #DD3B30

// Basics
.datepicker
  display inline-block

.quickdate-button, .quickdate-action-link
  div 
    display inline

.quickdate-popup
  background-color #fff
  border solid 1px #000
  text-align center
  width 250px
  display none
  position absolute
  padding 5px
  
  &.open
    display block
.quickdate-close
  position absolute
  top 5px
  right 5px
  color: #333
  &:hover, &:visited
    color: #333

.quickdate-calendar-header
  display block
  padding 2px 0
  margin-bottom 5px
  text-align center

.quickdate-month
  display inline-block

a.quickdate-prev-month
  float left
a.quickdate-next-month
  float right


.quickdate-text-inputs
  text-align left
  margin-bottom 10px

.quickdate-input-wrapper
  width 48%
  display inline-block

.quickdate-date-input, .quickdate-time-input
  width 100px

table.quickdate-calendar
  border-collapse collapse
  border-spacing 0
  width 100%
  margin-top 5px

  th, td
    padding 5px

  td
    &:hover
      cursor pointer

.quickdate-error
  border 1px solid error-color
.quickdate-error:focus
  outline-color: error-color
